{
	"name": "Titkok",
	"version": "1.0",
	"description": "Titok extensions",
	"permissions": [
		"declarativeContent",
		"storage",
		"activeTab",
		"https://www.tiktok.com/node/share/trending",
		"https://www.tiktok.com",
		"http://www.tiktok.com"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://www.tiktok.com/node/share/trending https://www.tiktok.com; object-src 'self'",
	"background": {
	  "scripts": ["js/background.js"],
	  "persistent": false
	},
	"options_page": "options.html",
	"browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/tiktok.png",
        "32": "images/tiktok.png",
        "48": "images/tiktok.png",
        "128": "images/tiktok.png"
      }
    },
    "icons": {
      "16": "images/tiktok.png",
      "32": "images/tiktok.png",
      "48": "images/tiktok.png",
      "128": "images/tiktok.png"
    },

  	"manifest_version": 2
}
